<title>{% block title %}Изменение данных студента{% endblock %}</title>

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
          crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c985b93468.js"
            crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker3.standalone.css" integrity="sha512-LWp36U88Tq7lJe+eRViSzCytKhHXxMGK+VXtNa9xgbXrgH8isxnsQ5Y4PKI7bbByxSyIqaeEHNBsouczGY6anA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


{% endblock %}

<body>
<header>
    <div class="navbar navbar-dark bg-secondary box-shadow">
        <div class="container-fluid d-flex justify-content-between">
            <a href="{{ path('index') }}" class="navbar-brand d-flex">
                <strong >Печать дипломов</strong>
            </a>
        </div>
    </div>
</header>

{% block body %}
    <div class="container">
        <div class="row no-gutters justify-content-center align-items-center mt-5">
            <div class="col-7">

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <div class="d-grid gap-2 mx-auto">
                <button class="btn btn-secondary mt-5" type="submit">
                    Изменить
                </button>
            </div>
            {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!— Optional JavaScript —>
    <!— jQuery first, then Popper.js, then Bootstrap JS —>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
            integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.ru.min.js" integrity="sha512-tPXUMumrKam4J6sFLWF/06wvl+Qyn27gMfmynldU730ZwqYkhT2dFUmttn2PuVoVRgzvzDicZ/KgOhWD+KAYQQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
     {% block addJs %}
    <script>
        $(document).ready(function() {
            // вам может понадобиться изменить этот код, если вы не используете Bootstrap Datepicker
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                inline: true,
                language: 'ru',
                changeYear: true,
                changeMonth: true
            });
        });
    </script>
    {% endblock %}
{% endblock %}
</body>

